              li
                a(href="" class="nav-color1") Newsletter
       .row
        .col-md-12   
          ul.icons.foot-title
            li
              img(src="img/pt.png", width="30px")
            li
              img(src="img/tr.png", width="30px") 
            li
              img(src="img/tw.png", width="30px")
