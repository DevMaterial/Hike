      .row.slider-section
        .slider
          .slide-viewer
            .slide-group
              .slide.slide-1
                a(href="html_pages/mountains.html")
                  img(src='img/mountain.png', alt='Mountains')
              .slide.slide-2
                a(href="html_pages/gear.html")
                  img(src='img/gear.png', alt='Gear')
              .slide.slide-3
                a(href="html_pages/newsletter.html")
                  img(src='img/newsletter.png', alt='Newsletter')
